<script src="~/js/jquery.Huploadify.js"></script>
<script> 
    // 选中任意列的checkbox 
    function checkAll(c) {
        var arr = document.getElementsByName('checkname');//checkbox名字叫checkname
        if (c) {
            for (var i = 0; i < arr.length; i++) {
                arr[i].checked = true;
            }
        }
        else {
            for (var i = 0; i < arr.length; i++) {
                arr[i].checked = false;
            }
        }
    };
    $(function () {
        var up = $('#upload').Huploadify({
            requeueErrors: true,
            queueSizeLimit: 5,
            auto: true,
            fileTypeExts: '*.xls;*.xlsx;',
            multi: true,
            breakPoints: false,
            saveInfoLocal: true,
            showUploadedSize: true,
            removeTimeout: 20,
            uploader: '/Home/InputTeacher',
            fileObjName: 'Filedata',
            onUploadSuccess:function(state){
                alert(state.msg);
            },
            onUploadComplete: function (data) {
                replacetag("/Home/Teacher", "#wrapper");
            }
        })
    });
</script>