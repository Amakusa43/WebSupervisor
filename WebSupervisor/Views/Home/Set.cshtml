<div class="set-contain">
    <ul class="set-tabs">
        <li class="active">
            <a href="#tab1">
                <span class="set-title">
                    个人信息
                </span>
            </a>
        </li>
        <li>
            <a href="#tab2">
                <span class="set-title">
                    开学信息
                </span>
            </a>
        </li>
    </ul>
    <div class="set-tab_container">
        <div id="tab1" class="set-tab_content" style="display: block; ">
            <form action="/Home/SetInfo" method="post">
                <input name="phone" type="text" placeholder="请输入电话" style="width:50%; height:40px;"
                       maxlength="11" class=" form-control text-style color-mar1" />
                <!--设置电话长度为11-->
                <input name="email" type="text" placeholder="example@email.com" style="width:50%; height:40px;"
                       class=" form-control text-style color-mar2" />
                <input name="password" type="text" placeholder="请输入密码，修改登录密码" style="width:50%; height:40px;"
                       class=" form-control text-style color-mar3" />
                <input name="preservation" type="submit" style="width:25%; height:40px;" class="text-style3 color-mar4"
                       value="保存" />
            </form>
        </div>
        <!--tab1-->
        <div id="tab2" class="set-tab_content" style="display: none; ">
            <form class="form-inline color-mar6" action="/Home/SetDate" method="post">
                <input name="year" type="text" class="form-control text-style" style=" width:80px;height:40px;"
                       id="年" placeholder="2016">
                <label for="年" class="time-color">
                    年
                </label>
                <input name="month" type="text" class="form-control text-style" style=" width:80px;height:40px;"
                       id="月" placeholder="02">
                <label for="月" class="time-color">
                    月
                </label>
                <input name="day" type="text" class="form-control text-style" style=" width:80px;height:40px;"
                       id="日" placeholder="29">
                <label for="日" class="time-color">
                    日
                </label>
                @{if (Session["Power"].ToString() == "超级管理员")
                    {
                        <input name="save" type="submit" style="width:25%; height:40px;" class="text-style3 color-mar6" value="保存" />
                    }
                }
            </form>

        </div>
        <!--tab2-->
    </div>
    <!--set-tab_container-->
</div>
    <!--set-tab_container-->
</div>
<!--set-contain-->

