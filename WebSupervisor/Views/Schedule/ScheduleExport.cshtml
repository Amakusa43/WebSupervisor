@using WebSupervisor.Models
@model PagedList<ClassesModel>
<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="po-right">

            <div class="btn-group">
                <select id="teachername">
                    <option value="0" id="0">请选择老师</option>
                    @*@{
                            foreach (var item in ViewBag.TeacherName)
                            {
                                <option value=@item>@item</option>
                            }

                        }*@
                </select>
                <!--教师姓名-->
            </div>
            <!--btn-group-->
            <div class="btn-group">
                <select id="classname">
                    <option value="0" id="0">请选择课程</option>
                    @*@{
                            foreach (var item in ViewBag.ClassName)
                            {
                                <option value=@item>@item</option>
                            }
                        }*@
                </select>
                <!--课程-->
            </div>
            <!--btn-group-->
            <div class="btn-group">
                <select id="major">
                    <option value="0" id="0">请选择专业</option>
                    @*@{
                            foreach (var item in ViewBag.Major)
                            {
                                <option value=@item>@item</option>
                            }

                        }*@
                </select>
                <!--专业-->
            </div>
            <!--btn-group-->
            <span>
                <a href="/Schedule/ExportCList" class="fileDownloadPromise sch-btn blue" id="btnexport">
                    导出课程表
                </a>
            </span>
        </div>
        <!--po-right-->
    </div>
</div>
<!--row-->
    <table class="table table-condensed table-hover table-responsive ove " id="classtable">
        <tr bgcolor="#f5f5f5">
            <th>
                <p>
                    教师
                </p>
            </th>
            <th>
                <p>
                    课程
                </p>
            </th>
            <th>
                <p>
                    专业
                </p>
            </th>
        </tr>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.TeacherName
                    </td>
                    <td>
                        @item.ClassName
                    </td>
                    <td>
                        @item.Major
                    </td>
                </tr>
            }
        }
    </table>
<div class="pager" style="text-align: center;">

    <span style="height: 10px; line-height: 10px;">共 @Model.TotalItemCount.ToString() 条记录，当前第 @Model.PageNumber 页/共 @Model.PageCount 页 </span>
    @Html.PagedListPager(
    Model,
    page => Url.Action("ScheduleExport", "Schedule", new { page }),
    PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions
    {
        LinkToFirstPageFormat = "首页",
        LinkToNextPageFormat = "下一页",
        LinkToPreviousPageFormat = "上一页",
        LinkToLastPageFormat = "末页",
        DisplayItemSliceAndTotal = false,
        MaximumPageNumbersToDisplay = 10,
        DisplayLinkToIndividualPages = true
    }, new AjaxOptions()
    {
        HttpMethod = "GET",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "classtable"
    }))
</div>
<script>
    var findclasses=function(teachername,classname,major)
    {
        if (teachername != 0 || classname != 0 || major != 0) {
            $.ajax({
                url: '/Schedule/ScheduleExport',
                type: 'post',
                async: false,
                data: { cbname: teachername, cbclass: classname, cbspcial: major },
                success: function (htm) {
                    $("#tab3").html(htm)
                },
                error: function () {
                    alert("出错了");
                }
            })
        }
            return true;
    }
    $("select").change(function () {
        var teachername = $("#teachername").val();
        var classname = $("#classname").val();
        var major = $("#major").val();
        findclasses(teachername, classname, major);

    });
</script>