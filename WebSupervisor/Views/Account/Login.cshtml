@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Page.Title = "登录";

}



<div id="header">
    <img src="~/image/11.png" />
    <span class=" dd-title-center dd-title-white">   督导听课</span><span class="dd-title-blue">系统</span>
</div>
<div id="page">
